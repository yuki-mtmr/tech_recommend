<h2 class="d-block col-md-12 mb-3 gray">
    今日のおすすめ記事
</h2>
<div id="carouselExampleControls" class="carousel slide mb-4 ml-3" data-ride="carousel">
  <div class="carousel-inner">
    <div class="carousel-item active">
      <a href="<%= @recommends.first["url"] %>" target="_blank" rel="noopener">
        <img src="<%= @recommends.first["img"] %>"width="40" height="40" alt="First slide">
        <%= @recommends.first["title"] %>
      </a>
    </div>
    <div class="carousel-item">
      <a href="<%= @recommends.second["url"] %>" target="_blank" rel="noopener">
        <img src="<%= @recommends.second["img"] %>"width="40" height="40" alt="First slide">
        <%= @recommends.second["title"] %>
      </a>
    </div>
    <div class="carousel-item">
      <a href="<%= @recommends.third["url"] %>" target="_blank" rel="noopener">
        <img src="<%= @recommends.third["img"] %>"width="40" height="40" alt="First slide">
        <%= @recommends.third["title"] %>
      </a>
    </div>
  </div>
  <a class="carousel-control-prev" href="#carouselExampleControls" role="button" data-slide="prev">
    <span class="carousel-control-prev-icon" aria-hidden="true"></span>
    <span class="sr-only">Previous</span>
  </a>
  <a class="carousel-control-next" href="#carouselExampleControls" role="button" data-slide="next">
    <span class="carousel-control-next-icon" aria-hidden="true"></span>
    <span class="sr-only">Next</span>
  </a>
</div>