<%= form_with(model: @post, local: true) do |f| %>
  <p class="gray pt-5">
    テックエキスパートで勉強する時に役立つ記事を投稿してください。
  </p>
  <%= image_tag 'article_tech.png', class: "img-fluid mx-auto d-block col-sm-6 col-md-6 col-lg-6  pb-3" %>
  <%= f.text_field :url, class: "col-sm-10 col-md-8 col-lg-6", placeholder: "おすすめの記事のURL" %>
  <div class="red">
    <%= @post.errors.full_messages_for(:url).first%>
  </div>
  
  <div class="col-md-6 mx-auto mt-2 mb-2">
    <div class="form-group">
      <label class="label-checkbox" for="post_category_ids_1">
          <input id="post_category_ids_1" name="post[category_ids][]" type="checkbox" value="1">
          <span class="custom-checkbox"></span>ruby
      </label>
      <input name="post[category_ids][]" type="hidden" value=""> 

      <label class="label-checkbox" for="post_category_ids_2">
          <input id="post_category_ids_2" name="post[category_ids][]" type="checkbox" value="2">
          <span class="custom-checkbox"></span>rails
      </label>
      <input name="post[category_ids][]" type="hidden" value=""> 

      <label class="label-checkbox" for="post_category_ids_3">
          <input id="post_category_ids_3" name="post[category_ids][]" type="checkbox" value="3">
          <span class="custom-checkbox"></span>aws
      </label>
      <input name="post[category_ids][]" type="hidden" value=""> 

      <label class="label-checkbox" for="post_category_ids_4">
          <input id="post_category_ids_4" name="post[category_ids][]" type="checkbox" value="4">
          <span class="custom-checkbox"></span>JS
      </label>
      <input name="post[category_ids][]" type="hidden" value=""> 

      <label class="label-checkbox" for="post_category_ids_5">
          <input id="post_category_ids_5" name="post[category_ids][]" type="checkbox" value="5">
          <span class="custom-checkbox"></span>docker
      </label>
      <input name="post[category_ids][]" type="hidden" value=""> 
    </div>
  </div>
  <%= f.submit "投稿する", class: "btn btn-outline-secondary mb-2" %>
  <nav class="navbar navbar-expand-lg navbar-light justify-content-center">
      <ul class="navbar-nav">
        <li class="nav-item">
          <a class="nav-link" href="/">TOP</a>
        </li>
      </ul>
  </nav>
<% end %>