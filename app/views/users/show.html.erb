<div class="container mx-auto p-0 mb-5 mt-5">
  <div class="row">
    <div class="col">
      <div class="card" style="width: 18rem;">
        <% if current_user.image.blank? %>
          <%= image_tag 'default_user.png', class: "img-fluid" %>
        <% else %>
          <%= image_tag current_user.image.url, class: "img-fluid" %>
        <% end %>
        <div class="card-body">
          <h5 class="card-title">自己紹介</h5>
          <p class="card-text">テックエキスパート63期のmattです</p>
          <a href="#" class="btn btn-secondary">Edit profile</a>
        </div>
      </div>
    </div>
    <div class="col-6">
      投稿一覧
      <% @posts.each do |post| %>
        <a href="<%= post.url %>" target="_blank" rel="noopener">
          <div class="card mt-2 mb-3">
            <div class="row no-gutters">
              <div class="col-md-1 ml-3 mt-3">
                <%= image_tag post.img, size: '30x30' %>
              </div>
              <div class="col-md-10 mb-0">
                <div class="card-body">
                  <h6 class="card-title"><%= truncate(post.title.to_s, length:40) %></h5>
                </div>
              </div>
            </div>
          </div>
        </a>
      <% end %>
    </div>
    <div class="col">
      
    </div>
  </div>
  </div>
</div>